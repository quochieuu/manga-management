@model IEnumerable<MangaBook.Data.Entities.Chapter>
@{
    ViewData["Title"] = "ListChapters";
}

<link href="~/css/profile.css" rel="stylesheet" />

<div class="container">
    <div class="dashboard-body">
        <div class="dashboard-caption">
            <div class="dashboard-caption-header">
                <h4><i class="ti-id-badge"></i>Quản lý chương</h4>
            </div>

            <div class="dashboard-caption-wrap">
                <!-- row -->
                <div class="row mrg-top-20">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <a asp-controller="Chapters" asp-action="Create" asp-route-mangaId="@ViewBag.MangaId" class="btn btn-primary mt-3 mb-3">Thêm chương mới</a>
                        <table id="example" class="display" style="min-width: 845px">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Number)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsActive)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Number)
                                        </td>
                                        <td>
                                            <a asp-action="ChangeChapterActive" asp-route-chapterId="@item.Id" style="cursor: pointer; display: block; width: 35 px; height: 21 px; z-index: 99999; position: relative;">
                                                @Html.DisplayFor(modelItem => item.IsActive)
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-controller="Chapters" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                            <a asp-controller="Chapters" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>