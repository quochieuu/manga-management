@model IEnumerable<MangaBook.Data.Entities.Manga>
@{
    ViewData["Title"] = "ListManga";
}

<link href="~/css/profile.css" rel="stylesheet" />

<div class="container">
    <div class="dashboard-body">
        <div class="dashboard-caption">
            <div class="dashboard-caption-header">
                <h4><i class="ti-id-badge"></i>Quản lý truyện</h4>
            </div>

            <div class="dashboard-caption-wrap">
                <!-- row -->
                <div class="row mrg-top-20">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <a asp-action="Create" class="btn btn-primary mt-3 mb-3">Thêm truyện mới</a>
                        <table id="example" class="display" style="min-width: 845px">
                            <thead>
                                <tr>
                                    <th style="width: 70px;">
                                        @Html.DisplayNameFor(model => model.UrlImage)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsActive)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (item.UrlImage != null)
                                            {
                                                <img src="~/uploads/manga/@item.UrlImage" style="width:70px" alt="@item.Name" />
                                            }
                                            else
                                            {
                                                <img src="~/uploads/manga/037402e8-8192-492a-9449-98601d765483.jpg" alt="image placeholder" style="width:70px" />
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name) <br />
                                            @Html.DisplayFor(modelItem => item.Author)
                                        </td>

                                        <td>
                                            @if (item.Status == 1)
                                            {
                                                <span class="badge badge-primary">Hiển thị</span>
                                            }
                                            else if (item.Status == 0)
                                            {
                                                <span class="badge badge-danger">Nháp</span>
                                            }
                                            else if (item.Status == 3)
                                            {
                                                <span class="badge badge-danger">Chờ duyệt</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-default">Not set</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="ChangeMangaActive" asp-route-mangaId="@item.Id" style="cursor: pointer; display: block; width: 35 px; height: 21 px; z-index: 99999; position: relative;">
                                                @Html.DisplayFor(modelItem => item.IsActive)
                                            </a>

                                        </td>
                                        <td>
                                            <a asp-action="ListChapters" asp-route-id="@item.Id">Chapters</a> |
                                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>