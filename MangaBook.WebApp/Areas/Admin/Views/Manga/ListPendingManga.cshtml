@model IEnumerable<MangaBook.Data.Entities.Manga>

@{
    ViewData["Title"] = "Index";
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Pending Manga</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Index</a></li>
        </ol>
    </div>
</div>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Quản lý truyện</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="display" style="min-width: 845px">
                        <thead>
                            <tr>
                                <th style="width: 70px;">
                                    @Html.DisplayNameFor(model => model.UrlImage)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsHot)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsActive)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if(item.UrlImage != null)
                                        {
                                            <img src="~/uploads/manga/@item.UrlImage" style="width:70px" alt="@item.Name"/>
                                        } else
                                        {
                                        <img src="~/uploads/manga/037402e8-8192-492a-9449-98601d765483.jpg" alt="image placeholder" style="width:70px"/>
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name) <br />
                                        @Html.DisplayFor(modelItem => item.Author)
                                    </td>

                                    <td>
                                        <a asp-action="ChangeMangaIsHot" asp-route-mangaId="@item.Id" style="cursor: pointer; display: block; width: 35 px; height: 21 px; z-index: 99999; position: relative;">
                                            @Html.DisplayFor(modelItem => item.IsHot)
                                        </a>
                                    </td>

                                    <td>
                                        @if (item.Status == 1)
                                        {
                                            <span class="badge badge-primary">Hiển thị</span>
                                        }
                                        else if (item.Status == 0)
                                        {
                                            <span class="badge badge-danger">Ẩn</span>
                                        }
                                        else if (item.Status == 3)
                                        {
                                            <span class="badge badge-danger">Chờ duyệt</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-default">Not set</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="ChangeMangaActive" asp-route-mangaId="@item.Id" style="cursor: pointer; display: block; width: 35 px; height: 21 px; z-index: 99999; position: relative;">
                                            @Html.DisplayFor(modelItem => item.IsActive)
                                        </a>
                                        
                                    </td>
                                    <td>
                                        <a asp-action="ApproveManga" asp-route-mangaId="@item.Id">Phê duyệt</a> |
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <!-- Datatable -->
        <script src="./../../admin/vendor/datatables/js/jquery.dataTables.min.js"></script>
        <script src="./../../admin/js/plugins-init/datatables.init.js"></script>
    }
